<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utep.cs.cs4330.battleship.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instr"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Moves the Ship up/down -->
            <Button
                android:background="@drawable/up"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/shipUp"
                android:onClick="moveUp"/>
            <Button
                android:background="@drawable/down"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/shipDown"
                android:onClick="moveDown"/>

            <!-- Move the Ship left/right and Rotate -->
            <Button
                android:background="@drawable/rotate"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:id="@+id/rotateShip"
                android:onClick="rotateShip"/>
            <Button
                android:background="@drawable/left"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/shipLeft"
                android:onClick="moveLeft"/>
            <Button
                android:background="@drawable/right"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/shipRight"
                android:onClick="moveRight"/>

            <!-- Save the location of this Ship -->
            <Button
                android:background="@drawable/save"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/nextShip"
                android:onClick="nextShip"/>
        </LinearLayout>

        <!-- BoardView -->
        <edu.utep.cs.cs4330.battleship.BoardView
            android:id="@+id/boardView"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="@string/smart"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="right"
                android:id="@+id/strategyButton"
                android:onClick="strategyClicked"/>

            <Button
                android:text="@string/create_button_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_gravity="right"
                android:id="@+id/createButton"
                android:onClick="createClicked"/>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>
